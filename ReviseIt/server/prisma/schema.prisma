generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  tz               String   @default("America/Sao_Paulo")
  googleConnected  Boolean  @default(false)
  googleCalendarId String?

  decks   Deck[]
  reviews Review[]
}

model Deck {
  id        String  @id @default(cuid())
  userId    String
  name      String
  goalMins  Int     @default(25)

  user   User  @relation(fields: [userId], references: [id])
  items  Item[]
}

model Item {
  id            String   @id @default(cuid())
  deckId        String
  title         String
  url           String?
  notes         String?
  ef            Float    @default(2.5)
  reps          Int      @default(0)
  intervalDays  Int      @default(0)
  dueDate       DateTime?

  deck     Deck   @relation(fields: [deckId], references: [id])
  reviews  Review[]
  links    CalendarLink[]
}

model Review {
  id          String   @id @default(cuid())
  userId      String
  itemId      String
  grade       Int
  durationMin Int      @default(25)
  reviewedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  item Item @relation(fields: [itemId], references: [id])
}

model CalendarLink {
  id             String   @id @default(cuid())
  itemId         String
  googleEventId  String?
  scheduledFor   DateTime

  item Item @relation(fields: [itemId], references: [id])
}
